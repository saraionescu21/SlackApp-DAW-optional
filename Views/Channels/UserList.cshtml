<div>Owner: </div>
<div class="row">
        <div class="col-4 mb-4">
            <div class="card" style="height:100%; width: 100%;">

                <div class="card-body d-flex justify-content-between flex-column">
                    <div>
                        <p><i class="bi bi-person"> </i> UserName: @ViewBag.Owner.UserName</p>

                        <p><i class="bi bi-envelope"></i> Email utilizator: @ViewBag.Owner.Email</p>


                        @if (@ViewBag.Owner.PhoneNumber != null)
                        {
                            <p><i class="bi bi-phone"></i> Telefon utilizator: @ViewBag.Owner.PhoneNumber</p>
                        }

                    </div>

                    
                </div>

            </div>
        </div>

</div>

<br />
<br />

<div>Moderatori: </div>
<div class="row">
    @foreach (var user in ViewBag.Moderators)
    {
        <div class="col-4 mb-4">
            <div class="card" style="height:100%; width: 100%;">

                <div class="card-body d-flex justify-content-between flex-column">
                    <div>
                        <p><i class="bi bi-person"> </i> UserName: @user.UserName</p>

                        <p><i class="bi bi-envelope"></i> Email utilizator: @user.Email</p>


                        @if (@user.PhoneNumber != null)
                        {
                            <p><i class="bi bi-phone"></i> Telefon utilizator: @user.PhoneNumber</p>
                        }

                    </div>

                    @if (ViewBag.EsteAdmin)
                    {
                        <div class="d-flex flex-row justify-content-between p-3">

                            <div> <a class="btn btn-sm btn-success" href="/Users/Edit/@user.Id"> Edit user</a> </div>

                            <div> <a class="btn btn-sm btn-success" href="/Users/Show/@user.Id"> View user</a> </div>

                        </div>
                    }
                    @if (ViewBag.EsteAdmin || ViewBag.EsteModerator)
                    {
                        <form method="post" action="/Channels/Kick">
                            <input type="hidden" name="id" value="@ViewBag.ChannelId" />
                            <input type="hidden" name="id2" value="@user.Id" />
                            <button type="submit" class="btn btn-sm btn-success">Kick User</button>
                        </form>
                        <form method="post" action="/Channels/Demote">
                            <input type="hidden" name="id" value="@ViewBag.ChannelId" />
                            <input type="hidden" name="id2" value="@user.Id" />
                            <button type="submit" class="btn btn-sm btn-success">Demote</button>
                        </form>
                    }
                </div>

            </div>
        </div>
    }

</div>


