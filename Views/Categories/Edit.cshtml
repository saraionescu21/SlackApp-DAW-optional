@model SlackApp.Models.Category


@{
    ViewBag.Title = "Edit category";
}

<h2>@ViewBag.Title</h2>

<div class="category-container" style="background-color: #f5f5f5; padding: 20px;">
@using (Html.BeginForm(controllerName: "Categories", actionName: "Edit", method: FormMethod.Post,
      routeValues: new { id = Model.Id }))
{
    @Html.Label("CategoryName", "Category Name")
    <br />
    @Html.Editor("CategoryName")

    @Html.ValidationMessageFor(m => m.CategoryName, null, new { @class = "text-danger" })
    <br />

    <br />

    <button class="btn btn-success" type="submit">Submit</button>
}
</div>